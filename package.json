{
  "name": "@ylan/systematic-cv",
  "version": "0.3.0",
  "type": "module",
  "description": "Type-safe CV generation system with tag-based filtering for creating multiple targeted resume variants from a single data source",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "systematic-cv": "./dist/systematic-cv.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "examples",
    "README.md"
  ],
  "scripts": {
    "build": "npx tsx src/systematic-cv.ts build --output ./examples/leibniz/dist --input ./examples/leibniz --queries ./examples/leibniz/cv-definitions.ts",
    "build:lib": "npm run clean:lib && tsc -p tsconfig.lib.json && npm run clean:lib-extras",
    "clean:lib": "rm -rf dist/core dist/builders dist/types dist/utils dist/index.* dist/systematic-cv.* dist/html dist/json dist/pdf",
    "clean:lib-extras": "rm -rf dist/build.* dist/dev-server.* dist/examples dist/html dist/json dist/pdf",
    "dev": "npx tsx src/systematic-cv.ts dev --output ./examples/leibniz/dist --input ./examples/leibniz --queries ./examples/leibniz/cv-definitions.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "example:leibniz": "npx tsx src/systematic-cv.ts build --output ./examples/leibniz/dist --input ./examples/leibniz --queries ./examples/leibniz/cv-definitions.ts",
    "prepublishOnly": "npm run build:lib",
    "clean": "rm -rf dist lib"
  },
  "keywords": [
    "cv",
    "resume",
    "json-resume",
    "jsonresume",
    "typescript",
    "career",
    "generator",
    "tag-based",
    "localization",
    "multiple-variants",
    "systematic",
    "query-builder",
    "matrix-format"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ylanallouche/systematic-cv.git"
  },
  "bugs": {
    "url": "https://github.com/ylanallouche/systematic-cv/issues"
  },
  "homepage": "https://github.com/ylanallouche/systematic-cv#readme",
  "author": "Ylan Allouche <ylan.allouche@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "^0.24.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^14.0.1",
    "express": "^4.18.2",
    "jsonresume-theme-awesomish": "github:ylanAllouche/jsonresume-theme-awesomish",
    "jsonresume-theme-class": "^0.1.2",
    "progress": "^2.0.3",
    "proxy-from-env": "^1.1.0",
    "resume-cli": "^3.1.2"
  },
  "optionalDependencies": {
    "puppeteer": "^24.17.0"
  }
}
